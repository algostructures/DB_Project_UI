<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>Servlets.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddSpare</servlet-name>
        <servlet-class>Servlets.AddSpare</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSpare</servlet-name>
        <url-pattern>/AddSpare</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getSpareParts</servlet-name>
        <servlet-class>Servlets.getSpareParts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getSpareParts</servlet-name>
        <url-pattern>/getSpareParts</url-pattern>
    </servlet-mapping>

</web-app>
